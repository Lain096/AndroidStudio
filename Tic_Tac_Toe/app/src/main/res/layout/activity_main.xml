<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/lightBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/idTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/abril_fatface"
            android:foregroundTint="#FFEB3B"
            android:gravity="center"
            android:text="TIC - TAC - TOE"
            android:textColor="#602F75"
            android:textSize="40dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/idImgInicio"
            android:layout_width="match_parent"
            android:layout_height="339dp"
            app:srcCompat="@drawable/inicio" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/rdBtnVsJugador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vs Jugador"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rdBtnVsMaquina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vs MÃ¡quina" />

            </RadioGroup>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/btnStartJuego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comenzar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>