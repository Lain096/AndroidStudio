<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pregunta5"
    android:background="@color/lightRed">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentPregunta5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentPregunta5">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="250sp"
            android:layout_height="350sp"
            android:background="@color/grey"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtPregunta5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/pregunta5"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtRespuestaPregunta5"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textAlignment="center" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <ImageButton
        android:id="@+id/btnPregunta5Siguiente"
        android:layout_width="61dp"
        android:layout_height="54dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/right_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.694"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5" />

    <ImageButton

        android:id="@+id/btnPregunta5Anterior"
        android:layout_width="61dp"
        android:layout_height="54dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5" />


</androidx.constraintlayout.widget.ConstraintLayout>