<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearPelicula"
    android:background="@color/blueblack"
   >
<LinearLayout
    android:id="@+id/contenedorCrearPelicula"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imgCrearPelicula"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_marginBottom="50sp"/>
<Button
    android:id="@+id/btnBuscarImagen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/buscar_imagen"
    android:layout_gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crearTitulo"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="132dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="124dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/protagonistas"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="132dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/txtActores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="124dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/directores"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="132dp"
            android:layout_weight="0.3"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/txtDirectores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/white"
            android:inputType="text"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="124dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sinopsis"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="132dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/txtSinopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/white"
            android:inputType="text"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="124dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:text="@string/guardar"
        android:textColor="@color/white"
        android:textSize="40sp"

        android:backgroundTint="@color/red"/>





</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>